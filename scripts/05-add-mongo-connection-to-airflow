#!/bin/bash

export MONGO_USERNAME=bbb-ml-staging
export MONGO_PASSWORD=bbbmltota200429stage
export MONGO_HOST=dbml-202009081004.bicyclebluebook.com
export MONGO_PORT=27017
export MONGO_DATABASE=bbb-ml-staging
export AIRFLOW_MONGO_CONNECTION_ID=bbb-ml-staging

docker exec -it airflow_scheduler bash -c " \
    airflow connections add \
        --conn-uri "mongo://$MONGO_USERNAME:$MONGO_PASSWORD@$MONGO_HOST:$MONGO_PORT/$MONGO_DATABASE" \
        $AIRFLOW_MONGO_CONNECTION_ID \
"